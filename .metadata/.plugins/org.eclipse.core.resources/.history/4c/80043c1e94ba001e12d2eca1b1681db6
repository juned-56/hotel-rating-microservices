######################============Used PostgresSQL DataBase for the User-Service============###########################
server:
  port: 8083

spring:
  application:
    name: USER-SERVICE 
  datasource:
    url: jdbc:postgresql://localhost:5432/ratingservice
    username: postgres
    password: postgres

  jpa:
    hibernate:
      ddl-auto: update
    show-sql: true
    
    
    
eureka:
  instance:
    prefer-ip-address: true
  client:
    fetch-registry: true
    register-with-eureka: true
    service-url:
      defaultZone : http://localhost:8761/eureka